<h1>Listing servers</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan=3 class=action-buttons>
        <%= link_to 'New Server', new_server_path %>
      </th>
    </tr>
  </thead>

  <tbody>
    <% @servers.each do |server| %>
      <tr>
        <td><%= server.name %></td>
        <td class=action-buttons><%= link_to 'Show', server %></td>
        <td class=action-buttons><%= link_to 'Edit', edit_server_path(server) %></td>
        <td class=action-buttons><%= link_to 'Destroy', server, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
