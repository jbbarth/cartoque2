<!DOCTYPE html>
<html>
<head>
  <title>Cartoque</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class=page-wrap>

  <%= render 'layouts/navbar' %>

  <div class=container>
    <%= content_tag(:div, class: "alert alert-warning") { notice } if notice %>
    <%= content_tag(:div, class: "alert alert-error")   { alert  } if alert %>
    <%= yield %>
  </div>

</div>

<div class=site-footer>
  <% if signed_in? %>
  <div class=container>
    Cartoque v<%= Cartoque::Application::VERSION %>
    -
    <%= link_to "Log out", destroy_user_session_path, method: :delete %>
  </div>
  <% end %>
</div>

</body>
</html>
